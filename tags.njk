---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slug }}/index.html"
---
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>標籤：{{ tag }} | PHDEV Notebooks</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<header>
  <a href="/" class="logo-link">
    <img src="/img/logo.png" alt="PHDEV Notebooks Logo" class="logo">
  </a>
  <h1>標籤：{{ tag }}</h1>
</header>
<main>
  <div class="card-grid">
    {%- for post in posts | reverse -%}
      {% if post.tags and post.tags.length %}
        {% if tag in post.tags %}
          <article class="card">
            <a href="{{ post.url }}" class="card-link-wrapper" target="_blank" rel="noopener noreferrer">
              <div class="card-icon">{{ post.icon or '📄' }}</div>
              <div class="card-content">
                <h2>{{ post.title }}</h2>
                <div class="card-meta">
                  <span>{{ post.date | date('YYYY-MM-DD') }}</span>
                </div>
              </div>
            </a>
          </article>
        {% endif %}
      {% endif %}
    {%- endfor -%}
  </div>
  <div style="text-align: center; margin-top: 2rem;">
    <a href="/" class="button-link">返回首頁</a>
  </div>
</main>
</body>
</html>
